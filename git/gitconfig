  recent = "! git for-each-ref --format='%(committerdate:relative)	%(refname:short)	%(objectname:short)' --sort=-committerdate refs/heads/ --count 25 | column -t -s $'\t'"
  ri = rebase -i
  ro = !git fetch origin && git reset --hard origin/master
